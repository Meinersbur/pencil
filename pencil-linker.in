JAR_PREFIX="@prefix@/share/pencil"
ANTLR3_CLASSPATH="@ANTLR3_CLASSPATH@"
CONFIGURETIME_CLASSPATH="@CLASSPATH@"
SCRIPTDIR="$(dirname $0)"

if [ -f "${SCRIPTDIR}/linker.jar" ]; then
	linkerjar="${SCRIPTDIR}/linker.jar"
else
	linkerjar="${JAR_PREFIX}/linker.jar"
fi

if [ -f "${SCRIPTDIR}/pencil.jar" ]; then
	penciljar="${SCRIPTDIR}/pencil.jar"
else
	penciljar="${JAR_PREFIX}/pencil.jar"
fi

CLASSPATH="${CLASSPATH}:${CONFIGURETIME_CLASSPATH}:${ANTLR3_CLASSPATH}${penciljar}" "@SCALA@" "${linkerjar}" "$@"
